{
  "name": "LittleBarista",
  "description": "Сайт кофейного сервиса Little Barista",
  "version": "1.0.0",
  "build": {
    "command": "npm run build",
    "output": "out"
  },
  "deploy": {
    "platform": "timeweb.cloud",
    "type": "frontend",
    "framework": "nextjs",
    "environment": {
      "NODE_ENV": "production"
    },
    "domains": [
      "littlebarista.ru",
      "www.littlebarista.ru"
    ],
    "ssl": {
      "enabled": true,
      "auto": true
    },
    "redirects": {
      "http_to_https": true,
      "www_redirect": true
    }
  }
}
