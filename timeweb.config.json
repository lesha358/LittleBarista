{
  "name": "LittleBarista",
  "description": "Сайт кофейного сервиса Little Barista",
  "version": "1.0.0",
  "build": {
    "command": "npm run build",
    "output": "standalone"
  },
  "deploy": {
    "platform": "timeweb.cloud",
    "docker": {
      "file": "Dockerfile",
      "context": "."
    },
    "environment": {
      "NODE_ENV": "production",
      "PORT": "3000"
    },
    "domains": [
      "littlebarista.ru",
      "www.littlebarista.ru"
    ],
    "ssl": {
      "enabled": true,
      "auto": true
    },
    "redirects": {
      "http_to_https": true,
      "www_redirect": true
    }
  },
  "nginx": {
    "config": "nginx.conf",
    "ssl_auto": true,
    "gzip": true,
    "cache_static": true
  }
}
