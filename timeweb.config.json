{
  "name": "LittleBarista",
  "description": "Сайт кофейного сервиса Little Barista - Static Website",
  "version": "1.0.0",
  "type": "static",
  "framework": "nextjs",
  "build": {
    "command": "npm run build",
    "output": "/out",
    "install": "npm install"
  },
  "deploy": {
    "platform": "timeweb.cloud",
    "type": "docker",
    "dockerfile": "Dockerfile",
    "environment": {
      "NODE_ENV": "production"
    },
    "domains": [
      "littlebarista.ru",
      "www.littlebarista.ru"
    ],
    "ssl": {
      "enabled": true,
      "auto": true
    },
    "redirects": {
      "http_to_https": true,
      "www_redirect": true
    },
    "nginx": {
      "config": "nginx.conf"
    }
  }
}
