{
  "name": "LittleBarista",
  "description": "Сайт кофейного сервиса Little Barista - Frontend App",
  "version": "1.0.0",
  "type": "nodejs",
  "framework": "nextjs",
  "build": {
    "install": "npm ci || npm install",
    "command": "npm run build"
  },
  "deploy": {
    "platform": "timeweb.cloud",
    "type": "nodejs",
    "start": "npm run start",
    "port": 3000,
    "environment": {
      "NODE_ENV": "production",
      "HOSTNAME": "0.0.0.0",
      "PORT": "3000"
    },
    "domains": [
      "littlebarista.ru",
      "www.littlebarista.ru"
    ],
    "ssl": {
      "enabled": true,
      "auto": true
    },
    "redirects": {
      "http_to_https": true,
      "www_redirect": true
    }
  }
}
